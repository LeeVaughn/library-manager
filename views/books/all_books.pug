extends ../layout

block content
  h1 Books
  p
    a.button(href="/new_book") Create New Book
  p
    | Filters 
    a(href="/all_books") All
    |  | 
    a(href="/overdue_books") Overdue
    |  | 
    a(href="/checked_books") Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      each book in books
        tr
          td
            a(href=`/books/${book.id}`) #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.first_published}
  p Go to page: 
    each page, index in pagination
      a(href=`/all_books/page/${index + 1}`) #{index + 1} 
  form(action="/search_books", method="get")
    p
      input(type="search", name="query", placeholder="Search All Books")
      input.searchButton(type="submit", class="searchButton", value="Search")
